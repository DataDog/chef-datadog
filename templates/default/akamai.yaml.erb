instances:
<% @instances.each do |i| -%>
  - site: "<%= i["site"] %>"
    <% if i.key?("tags") -%>
    tags:
      <% i["tags"].each do |t| -%>
      - <%= t %>
      <% end -%>
    <% end -%>
<% end -%>

init_config:
  username: <%= node['datadog']['akamai']['username'] %>
  password: <%= node['datadog']['akamai']['password'] %>
