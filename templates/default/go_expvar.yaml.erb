
instances:
  <% @instances.each do |i| -%>
  
  - expvar_url: <%= i['expvar_url'] %>
    <% if i.key?('tags') && i['tags'].length >= 1 -%>
    tags:
      <% i['tags'].each do |t| -%>
      - "<%= t %>"
      <% end -%> 
    <% end -%>
    
    metrics:
    <% i['metrics'].each do |m| -%>
    - path: <%= m['path'] %>
      <% if m.key?('alias') -%>
      alias: <%= m['alias'] %>
      <% end -%>
      type: <%= m['type'] %>
      <% if m.key?('tags') && m['tags'].length >= 1 -%>
      tags:
      <% m['tags'].each do |t| -%>
      - "<%= t %>"
      <% end -%> 
      <% end -%> 
    <% end -%>
    
  <% end -%>

