instances:
  <% @instances.each do |i| -%>
  - server: mongodb://<%= i['host']%>:<%= i['port'] %>
    <% if i.key?('tags') -%>
    tags:
      <% i['tags'].each do |t| -%>
    - <%= t %>
      <% end -%>
    <% end -%>
    <% if i.key?('ssl') -%>
    ssl: <%= i['ssl'] %>
    ssl_ca_certs: <%= i['ssl_ca_certs'] %>
    ssl_cert_reqs: <%= i['ssl_cert_reqs'] %>
    ssl_certfile: <%= i['ssl_certfile'] %>
    ssl_keyfile: <%= i['ssl_keyfile'] %>
    <% end %>
  <% end -%>

init_config:
# No init_config details needed
